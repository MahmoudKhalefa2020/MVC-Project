@model TeacherPaymentVM
@{
    ViewData["Title"] = "Teacher";
    SelectList items = new(Model.PaymentOptions);
}



<div class="" id="staticBackdrop">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body ">
                <div class="text-right"> <i class="fa fa-close close" data-dismiss="modal"></i> </div>
                <div class="px-4 py-5">
                    <form asp-action="Teacher">
                        <h5 class="text-uppercase mb-3" style="color:#C86FFF !important;">@Model.Name</h5>

                        <span class="theme-color">Withdrawl Summary</span>
                        <div class="mb-3">
                            <hr class="new1" style="margin: 5px 0 30px 0 !important;">
                        </div>

                        <div class="d-flex justify-content-between">
                            <span class="font-weight-bold">Available Balance</span>
                            <span class="text-muted">@Model.Balance LE</span>
                        </div>

                        <div class="d-flex justify-content-between mt-3 mb-3">
                            <span class="font-weight-bold mr-3">Withdrawl amount</span>
                            <input asp-for="WithdrawlAmount" class="form-control ml-5 w-50" />
                            <span asp-validation-for="WithdrawlAmount" class="text-danger"></span>
                        </div>

                        <span class="theme-color mt-2">Payment Options</span>
                        <div class="mb-3">
                            <hr class="new1">
                        </div>

                        <div class="d-flex justify-content-between">
                            <span class="font-weight-bold mr-3">Select Payment Option</span>
                            <select class="form-select w-50 mr-3" asp-for="PaymentName" asp-items="@items">Avaialbe Options</select>
                            <span asp-validation-for="PaymentName" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-2">
                            <span class="font-weight-bold mr-3">Payment Value</span>
                            <input asp-for="PaymentValue" class="form-control ml-5 w-50" />
                            <span asp-validation-for="PaymentValue" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-5">
                            <input type="submit" @*asp-action="Student"*@ value="Confirm Withdrawl" class="btn hero-btn"/>
                        </div>

                        <input type="hidden" asp-for="ID" />
                        @*<input type="hidden" asp-for="LessonID" />
                        <input type="hidden" asp-for="Price" />
                        <input type="hidden" asp-for="Discount" />
                        <input type="hidden" asp-for="Net" />*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

